<%= turbo_frame_tag brand do %>
  <div class="brand">
    <%= link_to brand.name, brand_path(brand), data: { turbo_frame: "_top" } %>
    <div class="brand__actions">
      <%= button_to "Delete",
                    brand_path(brand),
                    method: :delete,
                    # form: { data: { turbo_frame: "_top" } },
                    data: { turbo_confirm: 'Are you sure you want to delete this brand?' },
                    class: "btn btn-outline-danger" %>
      <%= link_to "Edit",
                  edit_brand_path(brand),
                  class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>