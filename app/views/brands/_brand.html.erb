<%= turbo_frame_tag brand do %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= brand.name %></h5>
      <div class="d-flex justify-content-end">
        <%= button_to "Delete",
                      brand_path(brand),
                      method: :delete,
                      data: { turbo_confirm: 'Are you sure you want to delete this brand?' },
                      class: "btn btn-outline-danger btn-sm m-1" %>
        <%= link_to "Edit",
                    edit_brand_path(brand),
                    class: "btn btn-outline-primary btn-sm m-1" %>
      </div>
    </div>
  </div>
<% end %>
