<%= turbo_frame_tag category do %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= link_to category.name, category_path(category), data: { turbo_frame: "_top" } %></h5>
      <div class="d-flex justify-content-end">
        <%= button_to "Delete",
                      category_path(category),
                      method: :delete,
                      data: { turbo_confirm: 'Are you sure you want to delete this category?' },
                      class: "btn btn-outline-danger btn-sm m-1" %>
        <%= link_to "Edit",
                    edit_category_path(category),
                    class: "btn btn-outline-primary btn-sm m-1" %>
      </div>
    </div>
  </div>
<% end %>
