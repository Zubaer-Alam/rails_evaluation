<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for category, html: { class: "card m-2 p-3" } do |f| %>
        <% if @category.errors.any? %>
          <div class="alert alert-danger">
            <%= @category.errors.full_messages.to_sentence.capitalize %>
          </div>
        <% end %>

        <%= f.input :name, label: "Category Name", input_html: { class: "form-control", autofocus: true } %>
        <%= f.submit "Submit", class: "btn btn-success mt-3" %>
        <%= link_to "Cancel", categories_path, class: "btn btn-outline-danger mt-3 mr-2" %>
      <% end %>
    </div>
  </div>
</div>
