<!DOCTYPE html>
<html lang="en">
<head>
  <title>RailsEvaluation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= turbo_include_tags %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <%= hotwire_livereload_tags if Rails.env.development? %>
</head>

<body class="bg-light">
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="text-center mb-4">
        <h1>Inventory</h1>
      </div>

      <% if notice.present? %>
        <div class="alert alert-success" role="alert" id="myAlert">
          <%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="alert alert-danger" role="alert" id="myAlert">
          <%= alert %>
        </div>
      <% end %>

      <% if user_signed_in? %>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <%= link_to current_user.email, edit_user_registration_path, class: "btn btn-link" %>
          </div>
          <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </div>
        <div class="mt-4">
          <%= link_to "Products", products_path, class: "btn btn-outline-primary mr-2" %>
          <%= link_to "Brands", brands_path, class: "btn btn-outline-secondary mr-2" %>
          <%= link_to "Categories", categories_path, class: "btn btn-outline-secondary mr-2" %>
        </div>
      <% end %>



      <%= yield %>

    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const myAlert = document.getElementById('myAlert');
    if (myAlert) {
      setTimeout(() => {
        myAlert.style.display = 'none';
      }, 3000);
    }
  });
</script>
</body>
</html>
