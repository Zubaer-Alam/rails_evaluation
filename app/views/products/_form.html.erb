<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for product, html: { class: "card m-2 p-3" } do |f| %>
        <% if @product.errors.any? %>
          <div class="alert alert-danger">
            <%= @product.errors.full_messages.to_sentence.capitalize %>
          </div>
        <% end %>

        <%= f.input :name, label: "Product Name", input_html: { class: "form-control", autofocus: true } %>

        <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select Category" }, { class: "form-control mt-3" } %>

        <%= f.collection_select :brand_id, Brand.all, :id, :name, { prompt: "Select Brand" }, { class: "form-control mt-3" } %>

        <%= f.input :price, label: "Price", input_html: { class: "form-control", step: "0.01" } %>

        <%= f.input :quantity, label: "Quantity", input_html: { class: "form-control", step: "1" } %>

        <%= f.submit "Submit", class: "btn btn-success mt-3" %>
        <%= link_to "Cancel", products_path, class: "btn btn-outline-danger mt-3 mr-2" %>
      <% end %>
    </div>
  </div>
</div>
